# FertiSmart Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-for-fertismart-2024
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost/fertismart_db
DEV_DATABASE_URL=postgresql://postgres:password@localhost/fertismart_dev
TEST_DATABASE_URL=postgresql://postgres:password@localhost/fertismart_test

# ML Configuration
MODEL_PATH=./trained_models
DATA_PATH=./data

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Upload Configuration
MAX_FILE_SIZE=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=csv,xlsx,json

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fertismart.log